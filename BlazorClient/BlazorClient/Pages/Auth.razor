@page "/auth"

<Div Class="container-with-centered-content">
    <Card Class="auth-form" Shadow="Shadow.Default" Margin="Margin.Is5.OnY">
        <CardHeader>
            <Div Flex="Flex.AlignContent.Center">
                <Text>
                    Войти
                </Text>
            </Div>
        </CardHeader>
        <CardBody>
            <Form>
                <Field>
                    <FieldLabel>
                        Имя пользователя
                    </FieldLabel>
                    <FieldBody>
                        <TextEdit Placeholder="Ваше имя пользователя" Role="TextRole.Email" />
                    </FieldBody>
                </Field>
                <Field>
                    <FieldLabel>
                        Пароль
                    </FieldLabel>
                    <FieldBody>
                        <TextEdit Placeholder="Ваш пароль" Role="TextRole.Password" autocomplete="new-password" />
                    </FieldBody>
                </Field>
                <Field Flex="Flex.Wrap.JustifyContent.Between">
                    <Check TValue="bool">
                        Запомнить
                    </Check>
                </Field>
                <Field>
                    <Button Color="Color.Primary" Block>
                        Войти
                    </Button>
                </Field>
            </Form>
        </CardBody>
    </Card>
</Div>

